// Main configuration file (schema.prisma)
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

model Companion {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  slug           String   @unique
  imageUrl       String
  category       String   // "fantasy" or "realistic" or "custom"
  archetype      String
  personality    String
  traits         String[]
  description    String
  characteristics Json    // Flexible object for appearance details
  featured       Boolean  @default(false)
  customizable   Boolean  @default(true)
  introVideoUrl  String?  // pre-generated intro video URL
  voiceId        String?  // ElevenLabs voice ID
  introText      String?  // spoken greeting (matches introVideoUrl audio)
  userId         String?  // Optional - for custom user-created companions
  createdAt      DateTime? @default(now())
  updatedAt      DateTime? @updatedAt

  @@index([category])
  @@index([featured])
  @@index([userId])
  @@map("companions")
}
